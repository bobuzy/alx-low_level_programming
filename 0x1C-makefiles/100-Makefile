.PHONY: all clean oclean fclean re

CC = gcc
SRC = $(wildcard *.c)
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${NAME}

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	${RM} *~ \#* ${NAME}

oclean:
	${RM} ${OBJ}

fclean: clean oclean

re: fclean all

${OBJ}: m.h
